@{
    ViewData["Title"] = "Home Page";
    ViewBag.Title = "EcoPoints - Начало";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/IndexStyle.css" />
</head>
<!-- Body -->
<div class="container mt-5">
    <div class="text-center">
        <h1 class="text-success">Добре дошли в EcoPoints 🌍</h1>
        <p class="lead">Тук можете да печелите точки чрез рециклиране и да участвате в събития.</p>
        <a href="@Url.Action("Create", "Items")" class="btn btn-primary btn-lg">Започни сега ➕</a>
    </div>

    <div class="row mt-4">
        <!-- Карточка за добавяне на предмет -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Добави рециклиран предмет</h5>
                    <p class="card-text">Регистрирай своите действия и печели точки.</p>
                    <a href="@Url.Action("Create","Items")" class="btn btn-primary">Добави ➕</a>
                </div>
            </div>
        </div>

        <!-- Карточка за класация -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Класация</h5>
                    <p class="card-text">Виж кои са най-активните граждани в града.</p>
                    <a href="@Url.Action("Index","Leaderboard")" class="btn btn-success">Виж класация 🏆</a>
                </div>
            </div>
        </div>

        <!-- Карточка за пунктове -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Пунктове за рециклиране</h5>
                    <p class="card-text">Намери най-близкия пункт за рециклиране.</p>
                    <a href="@Url.Action("Index","Stations")" class="btn btn-info">Виж картата 📍</a>
                </div>
            </div>
        </div>
    </div>
</div>

