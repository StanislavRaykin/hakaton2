@model hakaton2.Models.RequestEventViewModel

@{
    ViewBag.Title = "RequestEvent";
}

@{
    ViewData["Title"] = "RecyclingEventRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
}

<div class="register-container">
    <h2>Заявка за евент</h2>

    <form asp-action="RequestEvent" asp-controller="Event" method="post">
        <div class="form-group">
            <label>Заглавие на евента</label>
            <input asp-for="Title" type="text" required />
            <span class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Създател на евента</label>
            <input asp-for="Creator" type="text" required />
            <span class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Описание</label>
            <input asp-for="Description" type="text" required />
            <span class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Дата на създаване</label>
            <input asp-for="CreatedOn" type="datetime" required />
            <span class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Локация</label>
            <input asp-for="Location" type="text" required />
            <span class="text-danger"></span>
        </div>

        <button type="submit" class="btn-register">Изпрати заявка</button>
    </form>
</div>
