<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - EcoPoints</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/IndexStyle.css" />
</head>
<body class="d-flex flex-column">
    <!-- Header / Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <!-- Лого / Икона -->
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">🌱 EcoPoints</a>

            <!-- Навигация -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Ляво меню -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Events")">Events</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Blog")">Blog</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Points")">Points Exchange</a></li>
                </ul>

                <!-- Дясно меню -->
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", "Account")">Log in</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Register", "Account")">Register</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Body -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light mt-5 p-3">
        <div class="container d-flex justify-content-between align-items-center">
            <!-- Left side: links -->
            <div>
                <ul class="list-unstyled">
                    <li><a href="@Url.Action("Index", "Home")" class="text-light">Home</a></li>
                    <li><a href="@Url.Action("Index", "Events")" class="text-light">Events</a></li>
                    <li><a href="@Url.Action("Index", "Blog")" class="text-light">Blog</a></li>
                    <li><a href="@Url.Action("Index", "Points")" class="text-light">Points Exchange</a></li>
                </ul>
                <p class="mb-0">© 2025 EcoPoints</p>
            </div>
        </div>
    </footer>



    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
