@using System.Linq
@model List<hakaton2.Models.Models.BlogViewModel>




@{
    ViewBag.Title = "Блог - EcoPoints";
    Layout = "~/Views/Shared/_Layout.cshtml";

    
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="text-success mb-0">Блог</h1>
            <small class="text-muted">Истории, съвети и новини от EcoPoints</small>
        </div>
        <div>
            <a href="@Url.Action("Create", "Posts")" class="btn btn-sm btn-primary">Нова публикация</a>
        </div>
    </div>

    <div class="row">
        <main class="col-lg-8">
            @if (!Model.Any())
            {
                <div class="alert alert-info">Все още няма публикации.</div>
            }
            else
            {
                @foreach (var post in Model)
                {
                    <article class="card mb-4">
                        <div class="row g-0">
                            <div class="col">
                                <div class="card-body">
                                    <h3 class="h5 mb-1">@post.Title</h3>
                                        <small class="text-muted">@post.Published</small>
                                    @Html.Raw(post.ContentHtml)
                                </div>
                            </div>
                        </div>
                    </article>
                }
            }

            <!-- simple pagination placeholder -->
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled"><a class="page-link" href="#">←</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">→</a></li>
                </ul>
            </nav>
        </main>

        <aside class="col-lg-4">
            <div class="card mb-3 p-3">
                <h6 class="mb-2 text-success">Търсене</h6>
                <form method="get" action="@Url.Action("Search", "Blog")">
                    <div class="input-group">
                        <input name="q" class="form-control form-control-sm" placeholder="Търси в блога..." />
                        <button class="btn btn-sm btn-success" type="submit">Търси</button>
                    </div>
                </form>
            </div>

            <div class="card mb-3 p-3">
                <h6 class="mb-2 text-success">Категории</h6>
                <ul class="list-unstyled mb-0">
                    <li><a href="@Url.Action("Index", "Blog", new { category = "Съвети" })" class="text-decoration-none">Съвети</a></li>
                    <li><a href="@Url.Action("Index", "Blog", new { category = "Кампании" })" class="text-decoration-none">Кампании</a></li>
                    <li><a href="@Url.Action("Index", "Blog", new { category = "Новини" })" class="text-decoration-none">Новини</a></li>
                </ul>
            </div>

            <div class="card p-3">
                <h6 class="mb-2 text-success">Последни публикации</h6>
                @* <ul class="list-unstyled mb-0">
                    @{
                        foreach (var recent in posts.Take(4))
                        {
                            var rtitle = GetValue(recent, new[] { "Title", "Name" });
                            var rslug = GetValue(recent, new[] { "Slug", "Id" });
                            <li class="mb-2">
                                <a href="@Url.Action("Post", "Blog", new { slug = rslug })" class="text-decoration-none">@rtitle</a>
                            </li>
                        }
                        if (!posts.Any())
                        {
                            <li class="text-muted">Няма публикации</li>
                            ;
                        }
                    }
                </ul> *@
            </div>
        </aside>
    </div>
</div>

                              
 