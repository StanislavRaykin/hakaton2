@model hakaton2.Models.UserLoginViewModel

@{
    ViewBag.Title = "Login";
}

@{
    ViewData["Title"] = "RecyclingEventRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@section Styles {
    <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
}

<div class="register-container">
    <h2>Вход</h2>

   @*  <form asp-action="Login" asp-controller="Users" method="post"> *@
       <form>
        <div class="form-group">
            <label>Потребителско име</label>
            <input asp-for="Username" type="text" name="Name" required />
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Парола</label>
            <input asp-for="Password" type="password" name="Password" required minlength="6" />
            <span class="text-danger"></span>
        </div>

        <div class="form-group d-flex justify-content-between">
            <div class="d-flex align-items-center text-center" >
                <input type="checkbox" id="rememberMe" />
                <label for="rememberMe" style="white-space: nowrap; margin-left: 8px;">Запомни ме</label>
            </div>
            <a href="#" class="forgot-link">Забравена парола?</a>
        </div>

        <button type="submit" class="btn-login">Вход</button>

        <div class="form-footer">
            <p>Нямате акаунт? <a asp-controller="User" asp-action="Registration">Регистрация</a></p>
        </div>
    </form>
</div>